
                      <section class="panel">
                          <header class="panel-heading">
                              Cadastrar membro da equipe
                          </header>
                          <div class="panel-body">
                            
                                  <%= form_for @team, :html => {:multipart => true, :role => "form"} do |f| %>
                                  <div class="form-group">
                                      <label for="exampleInputEmail1">Nome</label>
                                    
                                      <%= f.text_field :name, :class => "form-control", :id => "exampleInputEmail1", :placeholder => "Entre com o nome do membro" %>

                                  </div>
                                  <div class="form-group">
                                      <label for="exampleInputPassword1">Perfil do Twitter</label>
                                      
                                       <%= f.text_field :twitter, :class => "form-control", :id => "exampleInputEmail1", :placeholder => "Entre com o perfil do twitter do membro" %>
                                  </div>
                                  <div class="form-group">
                                      <label for="exampleInputFile">Imagem</label>
                                     
                                      <%= f.file_field :imageteam, :id => "exampleInputFile" %>

                                      <p class="help-block" style="color:red;">Favor fazer upload de imagens com tamanho inferior a 1 mb.</p>
                                  </div>
                                  
                                 
                                  <%= f.submit "Criar membro", :class => "btn btn-info" %>
                         
                              <% end %>

                          </div>
                      </section>